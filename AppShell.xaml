<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SPJProyectoMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SPJProyectoMAUI"
    Title="SPJProyectoMAUI">

    <TabBar>
        <!-- Página principal para el registro -->
        <ShellContent
            Title="Vender"
            Icon="home_icon.png"
            ContentTemplate="{DataTemplate local:SPJVendedor}"
            Route="SPJVendedor" />

        <!-- Página para el catálogo de vehículos -->
        <ShellContent
            Title="Comprar"
            Icon="catalog_icon.png"
            ContentTemplate="{DataTemplate local:SPJComprador}"
            Route="SPJComprador" />
    </TabBar>
</Shell>
